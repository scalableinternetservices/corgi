<% cache(cache_key_for_user_info(user)) do %>
<div class="info-wrapper row">
	<div class="col-md-2">
		<%= inline_avatar_select(user) %>
	</div>
	<div class="col-md-2">
		<div><%= link_to user.user_name, profile_path(user.user_name) %></div>
		<div><%= user.name %></div>
	</div>
	<div class="col-md-3">
		<% if current_user?(user) %>
			<%= link_to 'Thats You!', profile_path(user.user_name), :class => 'btn edit-button' %>
		<% elsif current_user.following?(user) %>
		    <%= link_to 'Following', unfollow_user_path(user_name: user.user_name), {
		      :remote => true,
		      :class => 'btn unfollow-button',
		      :id => "unfollow-button-#{user.id}",
		      :method => :post } %>
		<% else %>
		    <%= link_to 'Follow', follow_user_path(user_name: user.user_name),
		      { :remote => true, 
		      	:class => 'btn follow-button', 
		      	:id => "follow-button-#{user.id}", 
		      	:method => :post } %>
		<% end %>
	</div>
</div>
<hr>
<% end %>
