<header>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-container">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" data-target="#bs-navbar-collapse-1" data-toggle="collapse" type="button">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to "Ucla Events", root_path %>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
      <% if signed_in? %>
        <%= form_tag search_path, {:method => 'post', :class => "navbar-form navbar-left"} do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], {:class => "search-bar", :placeholder => "Search"} %>
          </div>
        <% end %>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <% if signed_in? %>
          <li><%= render 'notifications/notification_dropdown' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Explore", explore_path %></li>
              <li><%= link_to "Profile", profile_path(current_user.user_name) %></li>
              <li><%= link_to "New Event", new_event_path %></li>
            </ul>
          </li>
          <li><%= link_to "Logout", signout_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Login", signin_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
</header>