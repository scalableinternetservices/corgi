<div class="form-wrapper">
  <h1>Update Event</h1>
  <%= simple_form_for @event , html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :title %>
    </div>
    <div class="form-group">
      <%= f.input :date, as: :datetime, start_year: Date.today.year, order: [:month, :day, :year] %>
    </div>
    <div class="form-group text-center">
      <%= f.input :location %>
    </div>
    <div class="form-group text-center">
      <%= f.input :description %>
    </div>
    <div class="form-group text-center">
        <h4>Change your event photo image:</h4>
      <div>
        <%= events_picture_select(@event) %>
      </div>
      <div class="form-group">
        <%= f.file_field :picture, onChange: 'loadFile(event)' %>
      </div>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
</div>